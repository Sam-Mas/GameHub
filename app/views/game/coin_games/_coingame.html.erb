<div id="coingame" class="centerBox">
	<h2>COIN TOSS GAME</h2>
	<%= form_for(@game, remote: true, html: {:id => "game_form"}) do |f| %>
		<%= f.button "#{image_tag("Money-Coin-24.png")} &nbsp; HEADS".html_safe, :onclick => 'reload_function()' , value: "Heads", class: 'btn btn-primary', disabled: @playersTurn %>
		or
		<%= f.button "#{image_tag("Money-Coin-01-24.png")} &nbsp; TAILS".html_safe, :onclick => 'reload_function()' , value: "Tails", class: 'btn btn-primary', disabled: @playersTurn %>
	<% end %>

	<script>
	function reload_function() 
	{
    	setInterval(function(){ location.reload(); }, 1000);
		if( <%= @num_turns %> <= 1)
		{
			alert('<%= @message %>');
			document.location.href="/";
		}
	}	
	</script>


	Choice:
	<span id = 'game_choice'>
		<%= @game_choice %>
	</span>
	<br>

	Flip Result:
	<span id = 'game_result'>
		<%= @game_result %>
	</span>
	<br>

	My Score:
	<span id='my_score'>
		<%= @my_score %>
	</span>
	<br>

	Opponents Score:
	<span id='opponents_score'>
		<%= @opponents_score %>
	</span>
	<br>

	Number of Turns:
	<span id='numTurns'>
		<%= @num_turns %>
	</span>
</div>

<%= javascript_include_tag '_coingame' %>
